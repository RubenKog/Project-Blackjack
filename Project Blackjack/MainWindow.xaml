<Window x:Class="Project_Blackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Blackjack"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid Background="#FFC9C9C9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel  Grid.Row="1" Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin ="5 40 0 40" >
            <Button IsEnabled="True" Name="BtnDeel" Content="Deal Cards" Margin="10" Click="BtnDeel_Click" FontFamily="Arial Black" FontSize="16"/>
            <Button IsEnabled="False" Name="BtnHit" Content="Hit" Margin="10" Click="BtnHit_Click" FontFamily="Arial Black" FontSize="16"/>
            <Button IsEnabled="False" Name="BtnStand" Content="Stand" Margin="10"   Click="BtnStand_Click" FontFamily="Arial Black" FontSize="16" />
            <Button IsEnabled="False" Name="BtnDubbel" Content="Double Down" Margin="10"  Click="BtnDubbel_Click" FontFamily="Arial Black" FontSize="16"/>
            <Button IsEnabled="False" Name="BtnReset" Content="Restart Game" Margin="10"  Click="BtnRestart_Click" FontFamily="Arial Black" FontSize="16"/>

        </StackPanel>

        <DockPanel Grid.Row="1" Grid.Column="0" Margin="10,10,10,10">
            <ListBox SelectionMode="Single" HorizontalContentAlignment="Center" Name="LijstSpeler"  FontSize="13" Background="#FFAEAEAE" SelectionChanged="LijstSpeler_SelectionChanged" FontFamily="Arial Black"/>
        </DockPanel>

        <DockPanel Grid.Row="1" Grid.Column="1" Margin="10,10,10,10">
            <ListBox SelectionMode="Single" HorizontalContentAlignment="Center" Name="LijstBank" FontSize="13" Background="#FFAEAEAE" SelectionChanged="LijstBank_SelectionChanged" FontFamily="Arial Black"/>
        </DockPanel>
        <StackPanel Grid.Column="0" Grid.Row="2">
            <Label Name="TxtGeld" Content="Budget: ---"  FontFamily="Arial Black" FontSize="18" />
            <Label Name="TxtAantalKaarten" Content="Aantal Kaarten in spel: 52" Grid.Column="0" Grid.Row="2" FontFamily="Arial Black" FontSize="18" />
            <CheckBox Name="BtnKapitaal" Grid.Column="0" Grid.Row="2" Content="Custom Startkapitaal" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsChecked="False" Checked="BtnKapitaal_Used" Unchecked="BtnKapitaal_Used" FontFamily="Arial Black"/>
            <CheckBox Name="BtnMusic" Grid.Column="0" Grid.Row="2" Content="Play Music" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsChecked="False" Checked="BtnMusic_Used" Unchecked="BtnMusic_Used" Margin="0 0 0 20" FontFamily="Arial Black"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label  Content="Speler" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="30" FontWeight="Bold"/>
            <Label Name="TxtSScore" Content="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="30" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <Label  Content="Bank" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="30" FontWeight="Bold"/>
            <Label Name="TxtBScore"  Content="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="30" FontWeight="Bold"/>

        </StackPanel>



        <StackPanel Grid.Row="2" Grid.Column="2">
            <Label Name="TxtStatus" Content="" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="25" FontWeight="Bold" />
            <Image Name="ImgKaart" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="150" Width="auto" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="20">
            <Label Name="TxtKlok" VerticalAlignment="Center" Content="Tijd:"/>
            <Label Name="TxtHistoriek" VerticalAlignment="Center" Content="Historiek: .. - .. / .." MouseLeftButtonUp="Historiek_Click"/> 


        </StackPanel>
        


    </Grid>


</Window>
